<%= simple_form_for(@restaurant) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-group my-3">
    <%= f.input :name, class: 'form-control' %>
    <%= f.input :address, class: 'form-control' %>
    <%= f.input :category, collection: Restaurant::CATEGORY, class: 'form-control' %>
    <%= f.input :phone_number, class: 'form-control' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-dark" %>
  </div>
<% end %>
